pipeline {
    agent any
    stages {
        stage('build') {
	    agent node {
	      git url: 'https://github.com/alexandru-gheorghe/open-source-machlib.git'
	      sh 'ls -la'
	    }
            steps {
                sh 'ls -l'
                sh 'cp ../../results.xml results.xml'
            }
	
        }
    }
    post { 
          success { 
               junit 'results.xml'
          }
    }
}
